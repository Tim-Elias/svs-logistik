<%- include("parts/head.ejs") %>
<%- include("parts/menu.ejs") %>
<div class="loader loader-bg">
    <div class="loader-inner ball-clip-rotate-pulse">
        <div></div>
        <div></div>
    </div>
</div>

<div class="container">
   
</div>
<br>

<div class="container-fluid">
<table class="table table-bordered">
    <tr>
        <th>Наименование</th>
        <th>Город</th>
        <th>Адрес</th>
        <th>Телефон</th>
        <th>Контактное лицо</th>
        <th>Компания</th>
        <th>Доп. информация</th>
        <th></th>
    </tr>

    <% table.forEach(function(tab) { %>
    <tr>
        <td name="ref"><%=tab.ref %></td>
        <td name="city"><%=tab.city %></td>
        <td name="address"><%=tab.address %></td>
        <td name="phone" ><%=tab.phone %></td>
        <td name="person" ><%=tab.person %></td>
        <td name="company" ><%=tab.company %></td>
        <td name="addinfo" ><%=tab.addinfo %></td>
        <td><button class="delete">удалить</button></td>
    </tr>
    <% }); %>
    <tr>
        <td><input id="tempName" placeholder="Наименование" type="text"></td>
        <td><input id="tempCity" class="city" placeholder="Город" type="text"></td>
        <td><input id="tempAdress" placeholder="Адрес" type="text"></td>
        <td><input id="tempPhone" placeholder="Телефон" type="text"></td>
        <td><input id="tempPerson" placeholder="Контактное лицо" type="text"></td>
        <td><input id="tempCompany" placeholder="Компания" type="text"></td>
        <td><input id="tempAddInfo" placeholder="Доп. информация" type="text"></td>
        <td><button id="tempAdd">Добавить</button></td>
    </tr>
</table>
</div>

<script src="/public/js/citys.js" type="text/javascript"></script>
<div class="container">
    <p id="result"></p>
</div>

